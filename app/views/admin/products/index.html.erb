<h1>Products</h1>
<%= link_to "Create new product",new_admin_product_path, class: 'btn btn-primary' %>

<% if flash[:notice].present? %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<!-- params[:product][:name] -->
<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Price</th>
    <th>Created At</th>
    <th>Action</th>
  </tr>
  <% for product in @products %>
    <tr>
      <td><%= link_to product.id, admin_product_path(product) %></td>

      <!-- <td><%= admin_product_path(product) %></td> -->
      <td><%= link_to product.name, admin_product_path(product) %></td>
      <td><%= number_to_currency product.price %></td>
      <td><%= product.created_at %></td>
      <td><%= link_to "delete", admin_product_path(product), method: :delete, confirm: "Are you sure?" %></td>
    </tr>
  <% end %>
</table>

